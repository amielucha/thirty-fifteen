{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}} hentry{{#if image}} has-post-thumbnail{{/if}}">
    {{#if image}}
    <a class="post-thumbnail" href="{{url}}">
        <img src="{{image}}" alt="{{title}} cover">
    </a>
    {{/if}}
    <header class="entry-header">
        <h2 class="entry-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <section class="entry-content post-excerpt">
        <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="entry-footer">
        {{#if featured}}
            <span class="sticky-post">Featured</span>
        {{/if}}
        <section class="entry-meta">
            <span class="posted-on"><time class="post-date" title="{{date format='YYYY-MM-DD HH:mm'}}" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY" timeago="true"}}</time></span>
            <span class="byline">
                {{#author}}
                <span class="author vcard"><span class="screen-reader-text">Author </span><a class="url fn n" href="{{url}}">{{name}}</a></span>
                {{/author}}
            </span>
            <span class="tags-links">{{tags prefix=""}}</span>
        </section>
    </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
